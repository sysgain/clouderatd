{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName":{
            "type": "string"
        },
        "version":{
            "type": "object"
        },
        "location":{
            "type": "string"
        },
        "vmSpec":{
            "type":"object"
        },
         "scriptsUri":{
             "type":"string"
         },
         "clusterParameters": {
             "type": "object"
         }
    },
    "variables":{
        "singleQuote": "'"
    },
    "resources":[
{
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'), '/bootstrapServer1')]",
            "apiVersion": "[parameters('version').resourceAPIVersion]",
            "location":"[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.OSTCExtensions",
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "[parameters('version').typeHandlerVersion1]",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris":[
                         "[concat(parameters('scriptsUri'),'scripts/hdfsdatalakesetup1.sh')]"
                    ],
                    "commandToExecute": "[concat('sh hdfsdatalakesetup1.sh', ' ',variables('singleQuote'),parameters('clusterParameters').envName,variables('singleQuote'), ' ',variables('singleQuote'),parameters('vmSpec').adminPassword,variables('singleQuote'))]"
                }
            }
        }
    ]
}
